{% extends 'base.html.twig' %}
{% import 'macros/clients_extrafield.html.twig' as extrafield_macros %}

{% block title %}{{ profile_user.fullName }}'s Profile - Social Network{% endblock %}

{% block body %}
{#{{ dump(extra_fields) }}#}
{# {{ dump(extra_fields['clients_extrafield'][0]) }} #}

<div class="container py-5">
    <div class="position-relative overflow-hidden rounded-4 shadow-lg mb-5" style="background: linear-gradient(135deg, #6366f1, #8b5cf6);">
        <div class="position-absolute top-0 end-0 opacity-25" style="width: 260px; height: 260px; background: radial-gradient(circle at center, rgba(255,255,255,0.45), rgba(255,255,255,0)); transform: translate(20%, -40%);"></div>
        <div class="row g-4 align-items-center text-white py-5 px-4 px-lg-5">
            <div class="col-lg-3 text-center">
                {% if profile_user.profileImage %}
                    <div class="position-relative d-inline-block">
                        <img src="/uploads/profiles/{{ profile_user.profileImage }}" alt="{{ profile_user.fullName }}" class="rounded-circle border border-4 border-white shadow" style="width: 160px; height: 160px; object-fit: cover;">
                        <span class="position-absolute bottom-0 end-0 translate-middle p-2 bg-success rounded-circle border border-4 border-white"><span class="visually-hidden">Online</span></span>
                    </div>
                {% else %}
                    <div class="rounded-circle bg-white bg-opacity-25 d-inline-flex align-items-center justify-content-center" style="width: 160px; height: 160px;">
                        <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                    </div>
                {% endif %}
            </div>
            <div class="col-lg-9">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-3">
                    <div>
                        <div class="d-flex align-items-center gap-3 mb-2">
                            <h1 class="h2 mb-0 fw-bold">{{ profile_user.fullName }}</h1>
                            {% if profile_user.isEmailVerified %}
                                <span class="badge bg-success bg-opacity-75 text-white rounded-pill px-3 py-2"><i class="bi bi-patch-check-fill me-1"></i>Verified</span>
                            {% endif %}
                        </div>
                        <div class="d-flex flex-wrap align-items-center gap-2 text-white-50">
                            <span class="badge bg-white bg-opacity-10 rounded-pill px-3 py-2"><i class="bi bi-envelope me-2"></i>{{ profile_user.email }}</span>
                            {% if profile_user.country %}
                                <span class="badge bg-white bg-opacity-10 rounded-pill px-3 py-2"><i class="bi bi-geo-alt me-2"></i>{{ profile_user.country }}{% if profile_user.state %}, {{ profile_user.state }}{% endif %}{% if profile_user.city %}, {{ profile_user.city }}{% endif %}</span>
                            {% endif %}
                            <span class="badge bg-white bg-opacity-10 rounded-pill px-3 py-2"><i class="bi bi-calendar-week me-2"></i>Joined {{ profile_user.createdAt|date('M d, Y') }}</span>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        {% if app.user and app.user.id == profile_user.id %}
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-light text-primary fw-semibold px-4"><i class="bi bi-pencil me-2"></i>Edit Profile</a>
                        {% elseif app.user %}
                            {% if app.user.following.contains(profile_user) %}
                                <form method="POST" action="{{ path('app_profile_unfollow', {'id': profile_user.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('unfollow') }}">
                                    <button type="submit" class="btn btn-outline-light fw-semibold px-4"><i class="bi bi-check-circle me-2"></i>Following</button>
                                </form>
                            {% else %}
                                <form method="POST" action="{{ path('app_profile_follow', {'id': profile_user.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('follow') }}">
                                    <button type="submit" class="btn btn-light text-primary fw-semibold px-4"><i class="bi bi-plus-circle me-2"></i>Follow</button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
                {% if profile_user.bio %}
                    <p class="lead text-white-75 mb-4">{{ profile_user.bio }}</p>
                {% endif %}
                <div class="row g-3">
                    <div class="col-6 col-lg-3">
                        <div class="bg-white bg-opacity-10 rounded-4 p-3 text-center">
                            <div class="fw-bold display-6 mb-1">{{ posts|length }}</div>
                            <div class="text-uppercase small text-white-50">Posts</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="bg-white bg-opacity-10 rounded-4 p-3 text-center">
                            <div class="fw-bold display-6 mb-1">{{ profile_user.followers|length }}</div>
                            <div class="text-uppercase small text-white-50">Followers</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="bg-white bg-opacity-10 rounded-4 p-3 text-center">
                            <div class="fw-bold display-6 mb-1">{{ profile_user.following|length }}</div>
                            <div class="text-uppercase small text-white-50">Following</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="bg-white bg-opacity-10 rounded-4 p-3 text-center">
                            <div class="fw-bold display-6 mb-1"><i class="bi bi-activity"></i></div>
                            <div class="text-uppercase small text-white-50">Active</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-start align-items-center mb-4">
                        <h2 class="h5 fw-bold mb-0 me-2">Quick Facts</h2>
                        {# <button type="button" class="btn btn-success" data-controller="copy" data-action="click->copy#copyData" data-copy-entity-value="Post" data-copy-entity-id-value="{{ profile_user.id }}">Copy</button> #}
                        {# <twig:CopyButton label="Copy" class="btn btn-secondary" :attributes="{'action': 'click->copy#copyData'}" /> #}
                        {{ component('copy_button', {
                             label: 'Copy',
                             class: 'btn btn-secondary',
                             dataAttributes: {
                                 controller: 'copy',
                                 action: 'click->copy#copyData',
                                'copy-entity-value': 'User',
                                'copy-entity-id-value': profile_user.id
                             },
                             alertId: 'copy-success',
                             alertDismissible: true
                         }) }}
                    </div>

                    <ul class="list-unstyled d-grid gap-3">
                        <li class="d-flex align-items-center gap-3">
                            <div class="rounded-circle bg-primary bg-opacity-10 text-primary p-3"><i class="bi bi-envelope-open"></i></div>
                            <div>
                                <div class="fw-semibold text-muted text-uppercase small">Email</div>
                                <div class="fw-semibold">{{ profile_user.email }}</div>
                            </div>
                        </li>
                        {% if profile_user.country or profile_user.state or profile_user.city %}
                            <li class="d-flex align-items-center gap-3">
                                <div class="rounded-circle bg-success bg-opacity-10 text-success p-3"><i class="bi bi-geo"></i></div>
                                <div>
                                    <div class="fw-semibold text-muted text-uppercase small">Location</div>
                                    <div class="fw-semibold">{{ [profile_user.city, profile_user.state, profile_user.country]|filter(v => v)|join(', ') }}</div>
                                </div>
                            </li>
                        {% endif %}
                        <li class="d-flex align-items-center gap-3">
                            <div class="rounded-circle bg-warning bg-opacity-10 text-warning p-3"><i class="bi bi-clock-history"></i></div>
                            <div>
                                <div class="fw-semibold text-muted text-uppercase small">Member Since</div>
                                <div class="fw-semibold">{{ profile_user.createdAt|date('F j, Y') }}</div>
                            </div>
                        </li>
                        <li class="d-flex align-items-center gap-3">
                            <div class="rounded-circle bg-danger bg-opacity-10 text-danger p-3"><i class="bi bi-lightning-charge"></i></div>
                            <div>
                                <div class="fw-semibold text-muted text-uppercase small">Last Update</div>
                                <div class="fw-semibold">{{ profile_user.updatedAt|date('F j, Y \a\t H:i') }}</div>
                            </div>
                        </li>
                        <li class="d-flex align-items-center gap-3">
                            <div class="container mt-5">
                            {{ extrafield_macros.clients_extrafield_form('extra_data', clientsextrafields, defaultextrafield) }}
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                        <div>
                            <h2 class="h5 fw-bold mb-1">Activity</h2>
                        </div>
                        <div class="btn-group" role="group">
                            {% set currentFilter = app.request.query.get('calendar_filter', 'created') %}
                            <a href="{{ path('app_profile', {'id': profile_user.id, 'calendar_filter': 'created'}) }}" class="btn btn-sm btn-outline-primary {% if currentFilter == 'created' %}active{% endif %}">Created</a>
                            <a href="{{ path('app_profile', {'id': profile_user.id, 'calendar_filter': 'updated'}) }}" class="btn btn-sm btn-outline-primary {% if currentFilter == 'updated' %}active{% endif %}">Updated</a>
                        </div>
                    </div>
                    <div id="calendar" class="rounded-4 bg-light border border-dashed p-4" data-author-id="{{ profile_user.id }}" data-filter="{{ currentFilter }}"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
        <div>
            <h2 class="h3 fw-bold mb-0">Latest Stories</h2>
            <p class="text-muted mb-0">Discover moments shared by {{ profile_user.firstName }}.</p>
        </div>
        {% if app.user and app.user.id == profile_user.id %}
            <a href="{{ path('app_post_create') }}" class="btn btn-primary fw-semibold px-4"><i class="bi bi-plus-circle me-2"></i>New Post</a>
        {% endif %}
    </div>

    {% if posts|length > 0 %}
        <div class="row g-4">
            {% for post in posts|sort((a, b) => b.createdAt <=> a.createdAt) %}
                <div class="col-12 col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div>
                                    <h5 class="fw-bold mb-1">
                                        <a href="{{ path('app_profile', {'id': post.author.id}) }}" class="text-decoration-none text-dark">
                                            {{ post.author.fullName }}
                                        </a>
                                    </h5>
                                    <small class="text-muted">{{ post.createdAt|date('M d, Y \a\t H:i') }}{% if post.updatedAt != post.createdAt %} â€¢ updated{% endif %}</small>
                                </div>
                                <div class="btn-group">
                                    {% if app.user and app.user.id == post.author.id %}
                                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                        <form method="POST" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Delete this post?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                            <p class="mb-3 flex-grow-1">{{ post.content }}</p>
                            {% if post.image %}
                                <div class="overflow-hidden rounded-4 mb-3">
                                    <img src="/uploads/posts/{{ post.image }}" alt="Post image" class="img-fluid" style="max-height: 280px; width: 100%; object-fit: cover;">
                                </div>
                            {% endif %}
                            <div class="d-flex align-items-center justify-content-between border-top pt-3">
                                <a href="{{ path('app_post_view', {'id': post.id}) }}" class="text-decoration-none fw-semibold text-primary"><i class="bi bi-chat-left-text me-2"></i>{{ post.comments|length }} Comments</a>
                                {% if app.user %}
                                    {% set userLiked = false %}
                                    {% for like in post.likes %}
                                        {% if like.user.id == app.user.id %}
                                            {% set userLiked = true %}
                                        {% endif %}
                                    {% endfor %}
                                    <form method="POST" action="{{ path('app_post_like', {'id': post.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                                        <button type="submit" class="btn btn-sm px-3 fw-semibold {% if userLiked %}btn-danger text-white{% else %}btn-outline-primary{% endif %}">
                                            <i class="bi {% if userLiked %}bi-heart-fill{% else %}bi-heart{% endif %} me-1"></i>{{ post.likes|length }} Likes
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="fw-semibold text-muted"><i class="bi bi-heart me-1"></i>{{ post.likes|length }} Likes</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-5 text-center">
                <div class="display-4 text-primary mb-3"><i class="bi bi-stars"></i></div>
                <h3 class="fw-bold mb-2">No stories yet</h3>
                <p class="text-muted mb-0">{{ profile_user.firstName }} hasn't shared anything just yet. Check back soon for new updates.</p>
                {% if app.user and app.user.id == profile_user.id %}
                    <a href="{{ path('app_post_create') }}" class="btn btn-primary mt-4 fw-semibold px-4"><i class="bi bi-plus-circle me-2"></i>Create your first post</a>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('calender') }}
{% endblock %}
