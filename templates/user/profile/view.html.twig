{% extends 'base.html.twig' %}

{% block title %}{{ profile_user.fullName }}'s Profile - Social Network{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <!-- Profile Image -->
                        <div class="col-md-3 text-center mb-3 mb-md-0">
                            {% if profile_user.profileImage %}
                                <img src="/uploads/profiles/{{ profile_user.profileImage }}" 
                                     alt="{{ profile_user.fullName }}" 
                                     class="rounded-circle img-fluid" 
                                     style="width: 150px; height: 150px; object-fit: cover;">
                            {% else %}
                                <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" 
                                     style="width: 150px; height: 150px;">
                                    <i class="bi bi-person-fill text-muted" style="font-size: 3rem;"></i>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Profile Info -->
                        <div class="col-md-9">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="mb-1">{{ profile_user.fullName }}</h1>
                                    <p class="text-muted mb-2">@{{ profile_user.email }}</p>
                                </div>
                                
                                <!-- Action Buttons -->
                                {% if app.user and app.user.id == profile_user.id %}
                                    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Edit Profile
                                    </a>
                                {% elseif app.user %}
                                    {% if app.user.following.contains(profile_user) %}
                                        <form method="POST" action="{{ path('app_profile_unfollow', {'id': profile_user.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('unfollow') }}">
                                            <button type="submit" class="btn btn-outline-secondary">
                                                <i class="bi bi-check-circle"></i> Following
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="POST" action="{{ path('app_profile_follow', {'id': profile_user.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('follow') }}">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-plus-circle"></i> Follow
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}
                            </div>

                            <!-- Bio -->
                            {% if profile_user.bio %}
                                <p class="mb-3">{{ profile_user.bio }}</p>
                            {% endif %}

                            <!-- Stats -->
                            <div class="row text-center border-top pt-3">
                                <div class="col-4">
                                    <div class="fw-bold">{{ posts|length }}</div>
                                    <small class="text-muted">Posts</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold">{{ profile_user.followers|length }}</div>
                                    <small class="text-muted">Followers</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold">{{ profile_user.following|length }}</div>
                                    <small class="text-muted">Following</small>
                                </div>
                            </div>

                            <!-- Timestamps -->
                            <small class="text-muted d-block mt-3">
                                Joined {{ profile_user.createdAt|date('M d, Y') }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Profile Calendar -->
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="mb-4">Calendar</h2>
                    <div
                        id="calendar"
                        class="profile-calendar"
                        data-author-id="{{ profile_user.id }}"
                        data-filter="{{ app.request.query.get('calendar_filter', 'created') }}"
                    ></div>
                </div>
            </div>
        </div>
    </div>

    <!-- User's Posts -->
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Posts</h2>

            {% if posts|length > 0 %}
                <div class="row">
                    {% for post in posts|sort((a, b) => b.createdAt <=> a.createdAt) %}
                        <div class="col-md-12 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <!-- Post Header -->
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <a href="{{ path('app_profile', {'id': post.author.id}) }}" class="text-decoration-none">
                                                    {{ post.author.fullName }}
                                                </a>
                                            </h5>
                                            <small class="text-muted">
                                                {{ post.createdAt|date('M d, Y \a\t H:i') }}
                                                {% if post.updatedAt != post.createdAt %}
                                                    (edited)
                                                {% endif %}
                                            </small>
                                        </div>
                                        <div class="dropdown">
                                            {% if app.user and app.user.id == post.author.id %}
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="{{ path('app_post_edit', {'id': post.id}) }}">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <form method="POST" action="{{ path('app_post_delete', {'id': post.id}) }}" 
                                                              onsubmit="return confirm('Are you sure?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                                            <button type="submit" class="dropdown-item text-danger">
                                                                <i class="bi bi-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            {% elseif app.user %}
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    {% if app.user.following.contains(post.author) %}
                                                        <li>
                                                            <form method="POST" action="{{ path('app_profile_unfollow', {'id': post.author.id}) }}" style="margin: 0;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('unfollow') }}">
                                                                <button type="submit" class="dropdown-item w-100 text-start">
                                                                    <i class="bi bi-check-circle"></i> Following
                                                                </button>
                                                            </form>
                                                        </li>
                                                    {% else %}
                                                        <li>
                                                            <form method="POST" action="{{ path('app_profile_follow', {'id': post.author.id}) }}" style="margin: 0;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('follow') }}">
                                                                <button type="submit" class="dropdown-item w-100 text-start">
                                                                    <i class="bi bi-plus-circle"></i> Follow
                                                                </button>
                                                            </form>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <!-- Post Content -->
                                    <p class="card-text mb-3">{{ post.content }}</p>

                                    {% if post.image %}
                                        <img src="/uploads/posts/{{ post.image }}" alt="Post image" 
                                             class="img-fluid mb-3 rounded" style="max-height: 400px; width: 100%; object-fit: cover;">
                                    {% endif %}

                                    <!-- Post Actions -->
                                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                        <a href="{{ path('app_post_view', {'id': post.id}) }}" class="text-decoration-none">
                                            <i class="bi bi-chat-left"></i> {{ post.comments|length }} Comments
                                        </a>
                                        {% if app.user %}
                                            {% set userLiked = false %}
                                            {% for like in post.likes %}
                                                {% if like.user.id == app.user.id %}
                                                    {% set userLiked = true %}
                                                {% endif %}
                                            {% endfor %}
                                            
                                            <form method="POST" action="{{ path('app_post_like', {'id': post.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                                                <button type="submit" class="btn btn-link text-decoration-none p-0">
                                                    {% if userLiked %}
                                                        <i class="bi bi-heart-fill text-danger"></i> {{ post.likes|length }} Likes
                                                    {% else %}
                                                        <i class="bi bi-heart"></i> {{ post.likes|length }} Likes
                                                    {% endif %}
                                                </button>
                                            </form>
                                        {% else %}
                                            <span>
                                                <i class="bi bi-heart"></i> {{ post.likes|length }} Likes
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    {% if app.user and app.user.id == profile_user.id %}
                        No posts yet. <a href="{{ path('app_post_create') }}">Create your first post!</a>
                    {% else %}
                        No posts yet.
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('calender') }}
{% endblock %}