{% extends 'base.html.twig' %}

{% block title %}Contact list{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2>Contact submissions</h2>
            <a href="{{ path('app_form') }}" class="btn btn-secondary mb-3">+ New enquiry</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Profile</th>
                            <th>Message</th>
                            <th>Submitted at</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for e in enquiries %}
                            <tr>
                                <td>{{ e.id }}</td>
                                <td>{{ e.name }}</td>
                                <td>{{ e.email }}</td>
                                <td>{{ e.phone }}</td>
                                <td>
                                    {% if e.profile %}
                                        <a href="{{ asset('assets/profiles/' ~ e.profile) }}" target="_blank">Download</a>
                                    {% else %}
                                        â€”
                                    {% endif %}
                                </td>
                                <td>{{ e.message|length > 80 ? (e.message[:80] ~ '...') : e.message }}</td>
                                <td>
                                    <a href="{{ path('contact_edit', {'id': e.id}) }}" class="btn btn-sm btn-outline-primary me-2">Edit</a>

                                    <form method="post" action="{{ path('contact_delete', {'id': e.id}) }}" style="display:inline" onsubmit="return confirm('Delete this enquiry?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ e.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                                <td>{{ e.id }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No enquiries found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
