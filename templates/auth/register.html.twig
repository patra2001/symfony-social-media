{% extends "base.html.twig" %}

{% block title %}Register - Social Media{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Create Account</h2>

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                    <div class="mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email) }}
                        {% if registrationForm.email.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {% for error in registrationForm.email.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(registrationForm.firstName) }}
                                {{ form_widget(registrationForm.firstName) }}
                                {% if registrationForm.firstName.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in registrationForm.firstName.vars.errors %}
                                            {{ error.message }}<br>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(registrationForm.lastName) }}
                                {{ form_widget(registrationForm.lastName) }}
                                {% if registrationForm.lastName.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in registrationForm.lastName.vars.errors %}
                                            {{ error.message }}<br>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword) }}
                        <small class="form-text text-muted d-block mt-1">
                            Password must contain at least 8 characters with uppercase, lowercase, and numbers.
                        </small>
                        {% if registrationForm.plainPassword.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {% for error in registrationForm.plainPassword.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                        {% if registrationForm.agreeTerms.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {% for error in registrationForm.agreeTerms.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>

                    {{ form_end(registrationForm) }}

                    <div class="text-center">
                        <p class="mb-0">Already have an account? <a href="{{ path('app_login') }}">Sign In</a></p>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-center text-muted">
                <small>By registering, you agree to our Terms & Conditions and Privacy Policy.</small>
            </div>
        </div>
    </div>
</div>
{% endblock %}