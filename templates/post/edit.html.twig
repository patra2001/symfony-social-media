{% extends "base.html.twig" %}

{% block title %}Edit Post{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Edit Post</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_widget(form.content) }}
                            {% if form.content.vars.errors %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(form.content) }}
                                </div>
                            {% endif %}
                        </div>

                        {% if post.image %}
                            <div class="mb-3">
                                <label class="form-label">Current Image:</label>
                                <div>
                                    <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Post image" class="img-fluid" style="max-width: 300px;">
                                </div>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label>{{ 'Change Image (optional):' }}</label>
                            {{ form_widget(form.image) }}
                            {% if form.image.vars.errors %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(form.image) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-flex gap-2">
                            {{ form_widget(form.submit, {'label': 'Update Post'}) }}
                            <a href="{{ path('app_post_view', {'id': post.id}) }}" class="btn btn-secondary">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}