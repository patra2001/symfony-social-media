{% extends "base.html.twig" %}

{% block title %}Post Feed{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Create Post Card -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <img src="{{ asset('uploads/profiles/' ~ app.user.profileImage|default('default-avatar.png')) }}" 
                             alt="Your avatar" class="rounded-circle" style="width: 48px; height: 48px; object-fit: cover;">
                        <a href="{{ path('app_post_create') }}" class="form-control" style="cursor: pointer;">
                            What's on your mind?
                        </a>
                    </div>
                </div>
            </div>

            <!-- Posts List -->
            {% if posts|length > 0 %}
                {% for post in posts %}
                    <div class="card mb-4">
                        <!-- Post Header -->
                        <div class="card-body pb-3">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex gap-3">
                                    <img src="{{ asset('uploads/profiles/' ~ post.author.profileImage|default('default-avatar.png')) }}" 
                                         alt="{{ post.author.firstName }}'s avatar" class="rounded-circle" 
                                         style="width: 48px; height: 48px; object-fit: cover;">
                                    <div>
                                        <h6 class="mb-0">
                                            <a href="{{ path('app_profile', {'id': post.author.id}) }}" class="text-decoration-none">
                                                {{ post.author.firstName }} {{ post.author.lastName }}
                                            </a>
                                        </h6>
                                        <small class="text-muted">{{ post.createdAt|format_datetime(locale='en', pattern="MMM dd, yyyy 'at' h:mm a") }}</small>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    {% if post.author == app.user %}
                                        <button class="btn btn-sm btn-link" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="{{ path('app_post_edit', {'id': post.id}) }}">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </li>
                                            <li>
                                                <form method="POST" action="{{ path('app_post_delete', {'id': post.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                                    <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure?')">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    {% elseif app.user %}
                                        <button class="btn btn-sm btn-link" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            {% if app.user.following.contains(post.author) %}
                                                <li>
                                                    <form method="POST" action="{{ path('app_profile_unfollow', {'id': post.author.id}) }}" style="margin: 0;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('unfollow') }}">
                                                        <button type="submit" class="dropdown-item w-100 text-start">
                                                            <i class="bi bi-check-circle"></i> Following
                                                        </button>
                                                    </form>
                                                </li>
                                            {% else %}
                                                <li>
                                                    <form method="POST" action="{{ path('app_profile_follow', {'id': post.author.id}) }}" style="margin: 0;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('follow') }}">
                                                        <button type="submit" class="dropdown-item w-100 text-start">
                                                            <i class="bi bi-plus-circle"></i> Follow
                                                        </button>
                                                    </form>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Post Content -->
                            <p class="card-text">{{ post.content }}</p>

                            {% if post.image %}
                                <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Post image" class="img-fluid rounded mb-3">
                            {% endif %}
                        </div>

                        <!-- Post Stats -->
                        <div class="card-body border-top py-2 text-muted small">
                            <span><i class="bi bi-heart-fill text-danger"></i> {{ post.likeCount }} Likes</span>
                            <span class="ms-3"><i class="bi bi-chat"></i> {{ post.commentCount }} Comments</span>
                        </div>

                        <!-- Post Actions -->
                        <div class="card-body border-top py-2">
                            <form method="POST" action="{{ path('app_post_like', {'id': post.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                                <button type="submit" class="btn btn-sm w-100 {% if post.isLikedBy(app.user) %}btn-danger{% else %}btn-outline-danger{% endif %}">
                                    <i class="bi bi-heart{% if post.isLikedBy(app.user) %}-fill{% endif %}"></i> 
                                    Like
                                </button>
                            </form>
                        </div>

                        <!-- Quick comment section -->
                        <div class="card-body border-top">
                            <a href="{{ path('app_post_view', {'id': post.id}) }}" class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-chat"></i> View & Comment
                            </a>
                        </div>
                    </div>
                {% endfor %}

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <nav aria-label="Page navigation" class="mb-5">
                        <ul class="pagination justify-content-center">
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_feed', {'page': currentPage - 1}) }}">Previous</a>
                                </li>
                            {% endif %}

                            {% for page in 1..totalPages %}
                                <li class="page-item {% if page == currentPage %}active{% endif %}">
                                    <a class="page-link" href="{{ path('app_post_feed', {'page': page}) }}">{{ page }}</a>
                                </li>
                            {% endfor %}

                            {% if currentPage < totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_feed', {'page': currentPage + 1}) }}">Next</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            {% else %}
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No posts yet. Be the first to <a href="{{ path('app_post_create') }}">create a post</a>!</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}