{% extends "base.html.twig" %}

{% block title %}{{ post.author.firstName }}'s Post{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Post Card -->
            <div class="card mb-4">
                <!-- Post Header -->
                <div class="card-body pb-3">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="d-flex gap-3">
                            <img src="{{ asset('uploads/profiles/' ~ post.author.profileImage|default('default-avatar.png')) }}" 
                                 alt="{{ post.author.firstName }}'s avatar" class="rounded-circle" 
                                 style="width: 48px; height: 48px; object-fit: cover;">
                            <div>
                                <h6 class="mb-0">
                                    <a href="{{ path('app_profile', {'id': post.author.id}) }}" class="text-decoration-none">
                                        {{ post.author.firstName }} {{ post.author.lastName }}
                                    </a>
                                </h6>
                                <small class="text-muted">{{ post.createdAt|format_datetime(locale='en', pattern="MMM dd, yyyy 'at' h:mm a") }}</small>
                                {% if post.updatedAt != post.createdAt %}
                                    <small class="text-muted d-block">(Edited {{ post.updatedAt|format_datetime(locale='en', pattern="MMM dd, yyyy 'at' h:mm a") }})</small>
                                {% endif %}
                            </div>
                        </div>
                        <div class="dropdown">
                            {% if post.author == app.user %}
                                <button class="btn btn-sm btn-link" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_post_edit', {'id': post.id}) }}">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </li>
                                    <li>
                                        <form method="POST" action="{{ path('app_post_delete', {'id': post.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                            <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            {% elseif app.user %}
                                <button class="btn btn-sm btn-link" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    {% if app.user.following.contains(post.author) %}
                                        <li>
                                            <form method="POST" action="{{ path('app_profile_unfollow', {'id': post.author.id}) }}" style="margin: 0;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('unfollow') }}">
                                                <button type="submit" class="dropdown-item w-100 text-start">
                                                    <i class="bi bi-check-circle"></i> Following
                                                </button>
                                            </form>
                                        </li>
                                    {% else %}
                                        <li>
                                            <form method="POST" action="{{ path('app_profile_follow', {'id': post.author.id}) }}" style="margin: 0;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('follow') }}">
                                                <button type="submit" class="dropdown-item w-100 text-start">
                                                    <i class="bi bi-plus-circle"></i> Follow
                                                </button>
                                            </form>
                                        </li>
                                    {% endif %}
                                </ul>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Post Content -->
                    <p class="card-text">{{ post.content }}</p>

                    {% if post.image %}
                        <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Post image" class="img-fluid rounded mb-3">
                    {% endif %}
                </div>

                <!-- Post Stats -->
                <div class="card-body border-top py-2 text-muted small">
                    <span><i class="bi bi-heart-fill text-danger"></i> {{ post.likeCount }} Likes</span>
                    <span class="ms-3"><i class="bi bi-chat"></i> {{ post.commentCount }} Comments</span>
                </div>

                <!-- Post Actions -->
                <div class="card-body border-top py-2">
                    <form method="POST" action="{{ path('app_post_like', {'id': post.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                        <button type="submit" class="btn btn-sm w-100 {% if post.isLikedBy(app.user) %}btn-danger{% else %}btn-outline-danger{% endif %}">
                            <i class="bi bi-heart{% if post.isLikedBy(app.user) %}-fill{% endif %}"></i> 
                            {% if post.isLikedBy(app.user) %}Unlike{% else %}Like{% endif %}
                        </button>
                    </form>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Comments ({{ post.commentCount }})</h6>
                </div>
                <div class="card-body">
                    <!-- Add Comment Form -->
                    <form method="POST" action="{{ path('app_post_view', {'id': post.id}) }}" class="mb-4">
                        <div class="d-flex gap-3">
                            <img src="{{ asset('uploads/profiles/' ~ app.user.profileImage|default('default-avatar.png')) }}" 
                                 alt="Your avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                            <div class="flex-grow-1">
                                {{ form_widget(commentForm.content) }}
                                {% if commentForm.content.vars.errors %}
                                    <div class="alert alert-danger mt-2">
                                        {{ form_errors(commentForm.content) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="d-flex gap-2 justify-content-end mt-2">
                            {{ form_widget(commentForm.submit) }}
                        </div>
                        {{ form_end(commentForm) }}
                    </form>

                    {% if post.comments|length > 0 %}
                        <!-- Comments List -->
                        <div class="border-top pt-3">
                            {% for comment in post.comments %}
                                <div class="d-flex gap-3 mb-4">
                                    <img src="{{ asset('uploads/profiles/' ~ comment.author.profileImage|default('default-avatar.png')) }}" 
                                         alt="{{ comment.author.firstName }}'s avatar" class="rounded-circle" 
                                         style="width: 40px; height: 40px; object-fit: cover;">
                                    <div class="flex-grow-1">
                                        <div class="bg-light p-3 rounded">
                                            <h6 class="mb-1">
                                                <a href="{{ path('app_profile', {'id': comment.author.id}) }}" class="text-decoration-none">
                                                    {{ comment.author.firstName }} {{ comment.author.lastName }}
                                                </a>
                                            </h6>
                                            <p class="mb-0">{{ comment.content }}</p>
                                        </div>
                                        <small class="text-muted d-block mt-1">
                                            {{ comment.createdAt|format_datetime(locale='en', pattern="MMM dd, yyyy 'at' h:mm a") }}
                                        </small>
                                        {% if comment.author == app.user %}
                                            <form method="POST" action="{{ path('app_comment_delete', {'id': comment.id}) }}" class="d-inline mt-2">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-link text-danger p-0" onclick="return confirm('Delete this comment?')">
                                                    Delete
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted text-center py-3">No comments yet. Be the first to comment!</p>
                    {% endif %}
                </div>
            </div>

            <a href="{{ path('app_post_feed') }}" class="btn btn-outline-secondary mt-4">
                <i class="bi bi-arrow-left"></i> Back to Feed
            </a>
        </div>
    </div>
</div>
{% endblock %}