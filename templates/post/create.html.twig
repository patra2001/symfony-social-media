{% extends "base.html.twig" %}
{% import 'macros/extra.html.twig' as extraData %}

{% block title %}Create a New Post{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create a New Post</h5>
                </div>
                <div class="card-body" id="post-data" data-extra-fields='{{ extra_fields|json_encode|e('html_attr') }}' data-controller="post">
                    {{ form_start(form, {'attr': {'id': 'createPostForm', 'novalidate': 'novalidate', 'class': 'needs-validation', 'data-turbo': 'true'}}) }}
                        <div class="mb-3">
                            {{ form_widget(form.type) }}
                                <div class="alert text-danger mt-2 d-none" id="typeError">
                                </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control tinymce'}}) }}
                                <div class="alert alert-danger mt-2 d-none" id="contentError">
                                </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.image) }}
                                <div class="alert alert-danger mt-2 d-none" id="imageError">
                                </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form['extraData']) }}
                            <label class="form-label">Additional data</label>
                            <div id="extraPicker" class="border rounded p-3" style="cursor:pointer; min-height:48px;" data-action="click->post#openExtra">
                                <small class="text-muted" id="extraPreview">Additional data</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            {{ form_widget(form.submit) }}
                            <a href="{{ path('app_post_feed') }}" class="btn btn-secondary">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                        {{ extraData.extra_data(form, extra_fields, 'createPostForm') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# TinyMCE CDN (optional) <script src="https://cdn.tiny.cloud/1/.../tinymce.min.js"></script> #}
    {# <div id="post-data" data-extra-fields='{{ extra_fields|json_encode|e('html_attr') }}'></div> #}
    {{ encore_entry_script_tags('post') }}
{% endblock %}