{% macro extra_data(form, extra_fields, form_id) %}
<turbo-frame id="extra-frame">
  <div class="modal fade" id="popup" tabindex="-1" aria-labelledby="popupLabel" aria-hidden="true" data-post-target="popup">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="extraForm" data-action="submit->post#submitExtra" data-post-target="extraForm">
          <div class="modal-header">
            <h5 class="modal-title" id="popupLabel">Edit Extra Data</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div id="formField" data-post-target="formField">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</turbo-frame>
{% endmacro %}
